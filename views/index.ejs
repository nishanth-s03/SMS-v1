<% if(userPreferences.theme==="Dark" ) { %>
  <style>
    body {
      background-color: rgb(52, 44, 44);
      color: white;
    }
  </style>
  <% } %>

    <% if(userPreferences.theme==="Light" ) { %>
      <style>
        body {
          background-color: rgb(255, 255, 255);
          color: black;
        }
      </style>
      <% } %>

        <body>
          <h1>☠️ <%= userPreferences.theme %> & <%= userPreferences.language %>
          </h1>


          <a href="/sendEmail" class="btn btn-outline-primary">Send mail</a>

          <a href="/register" class="btn btn-outline-primary">Go to register</a>

          <div class="alert alert-warning alert-dismissible fade show" role="alert">
            <strong>Holy guacamole!</strong> You should check in on some of those fields below.
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
          </div>

          <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
