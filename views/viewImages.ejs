<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Search Images</title>

    <!-- Add Bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>

<body class="container">

    <form id="searchForm" action="/dummy/view" method="post" class="mt-3">
        <div class="form-group">
            <label for="searchInput">Search by Name:</label>
            <input type="text" class="form-control" id="searchInput" name="search" placeholder="Enter name...">
        </div>
        <button type="submit" class="btn btn-primary">Search</button>
    </form>

    <!-- Include the Bootstrap alert for messages -->
    <%- include('partials/show_cld_img.ejs') %>

        <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
